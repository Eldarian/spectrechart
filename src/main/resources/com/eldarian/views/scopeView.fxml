<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import java.lang.Integer?>

<?import org.jfree.chart.fx.ChartViewer?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="800.0" prefWidth="1280.0" spacing="20.0" style="-fx-background-color: #434343;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.eldarian.fx.ScopeController">
    <children>
        <ChartViewer fx:id="lineChartViewer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                     prefHeight="482.0" prefWidth="984.0" VBox.vgrow="ALWAYS"/>
        <ToolBar minWidth="500.0" prefHeight="41.0" prefWidth="933.0" style="-fx-background-color: #434343;"
                 VBox.vgrow="ALWAYS">
            <items>
                <Button fx:id="startStopButton" mnemonicParsing="false" onAction="#startStop" style="-fx-background-color: #434343;"
                        text="Start" textFill="WHITE">
                    <tooltip>
                        <Tooltip text="Начать отображение"/>
                    </tooltip>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button mnemonicParsing="false" onAction="#hold" style="-fx-background-color: #434343;"
                        text="Hold" textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="calibrationButton" onAction="#switchToHistogram" prefWidth="104.0"
                        style="-fx-background-color: #434343;" text="Histogram" textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <ChoiceBox fx:id="channelsChooser" style="-fx-background-color: #434343;"
                           stylesheets="@calibrationStyle.css" value="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <Integer fx:value="1"/>
                            <Integer fx:value="2"/>
                            <Integer fx:value="3"/>
                            <Integer fx:value="4"/>
                            <Integer fx:value="5"/>
                            <Integer fx:value="6"/>
                            <Integer fx:value="7"/>
                            <Integer fx:value="8"/>
                            <Integer fx:value="9"/>
                            <Integer fx:value="10"/>
                            <Integer fx:value="11"/>
                            <Integer fx:value="12"/>
                            <Integer fx:value="13"/>
                            <Integer fx:value="14"/>
                            <Integer fx:value="15"/>
                            <Integer fx:value="16"/>
                        </FXCollections>
                    </items>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <tooltip>
                        <Tooltip text="Empty Tooltip"/>
                    </tooltip>
                </ChoiceBox>
                <Button mnemonicParsing="false" style="-fx-background-color: #434343;" text="Open File"
                        textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openSettingsWindow"
                        style="-fx-background-color: #434343;" text="Settings..." textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <CheckBox fx:id="toFile" text="Save to File" textFill="WHITE"/>
            </items>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </ToolBar>
    </children>
    <padding>
        <Insets top="20.0"/>
    </padding>
</VBox>
