<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>

<?import org.jfree.chart.fx.ChartViewer?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eldarian.fx.HistogramController">
   <children>
           <Label text="Histogram" />
           <ChartViewer fx:id="histogramChartViewer" prefHeight="200.0" prefWidth="300.0" VBox.vgrow="ALWAYS"> </ChartViewer>
           <ToolBar minWidth="500.0" prefHeight="41.0" prefWidth="933.0" VBox.vgrow="ALWAYS">
              <items>
                      <Button mnemonicParsing="false" text="Start">
                          <tooltip>
                              <Tooltip text="Начать отображение" />
                          </tooltip>
                      </Button>
                      <Button mnemonicParsing="false" text="Freeze" />
                      <Button onAction="#switchToCalibrationView" prefWidth="104.0" text="Calibration" />
                        <Button mnemonicParsing="false" text="Open File" />
                      <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openSettingsWindow" text="Settings..." />
              </items>
               <VBox.margin>
                   <Insets />
               </VBox.margin>
           </ToolBar>
   </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
